<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginCadastroMobile.Cadastro">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <BoxView Grid.Row="0"
                 BackgroundColor="#2B0B98"/>
        <Button Grid.Row="0"
                    x:Name="btnVoltarLogin"
                    Text="x"
                    FontAttributes="Bold"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"
                    BackgroundColor="#2B0B98"
                Clicked="btnVoltarLogin_Clicked"/>
        <Label Grid.Row="0"
                   Text="Cadastro"
                   FontSize="50"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="White"/>

        <VerticalStackLayout Grid.Row="1"
                    Padding="20">
            <Label Text="Nome"/>
            <Entry Placeholder="Seu nome"/>

            <Label Text="Sobrenome"
                   Margin="0,20,0,0"/>
            <Entry Placeholder="Seu sobrenome"/>

            <Label Text="Data de nacimento"
                   Margin="0,20,0,0"/>
            <DatePicker x:Name="dpkNascimento"/>

            <Label Text="Email" 
                   Margin="0,20,0,0"/>
            <Entry Keyboard="Email"
                   Placeholder="email@email.com"/>

            <Label Text="Senha" 
                   Margin="0,20,0,0"/>
            <Entry IsPassword="True"
                   Placeholder="********"/>

            <Label Text="Confirmar Senha" 
                   Margin="0,20,0,0"/>
            <Entry IsPassword="True"
                   Placeholder="********"/>

            <Button x:Name="btnCadastro"
                    Text="Cadastrar Dados"
                    Clicked="btnCadastro_Clicked"
                    Margin="0,40,0,0"
                    BackgroundColor="#2B0B98"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>